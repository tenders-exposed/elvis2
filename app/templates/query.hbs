{{e-navbar}}


<div class="container">

  {{! @TODO: make page-header into component }}
  <div class="page-header">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="#">Elvis</a>
      </li>
      <li class="breadcrumb-item active">
        <a href="#">Query</a>
      </li>
    </ol>
    <h1>Network Query</h1>
    <hr>
  </div>

  {{! db-query component }}

  <div class="card">
    <div class="card-body">

      <h2>1. Country</h2>
      <p>Reduce visualisation to at least one country. </p>

      {{! country select component }}
      {{! @TODO: use ember-power-select and display country flags  }}
      <div id="elvis-db-query-country-select">
        <select class="custom-select" multiple>
          <option value="1"><img alt="" src="[slovak flag]"> Slovakia</option>
          <option value="2"><img alt="" src="[romania flag]"> Romania</option>
          <option value="3"><img alt="" src="[netherlands flag]"> Netherlands</option>
        </select>
      </div>

    </div>
  </div>
  <hr>
  <div class="card">
    <div class="card-body">

      <h2>2. Companies</h2>
      <p>Only these supplying companies will be visualised. If none selected, all companies within sector will be visualised.</p>
      {{! company select component }}
      {{! @TODO: use ember-power-select and display color circles for company/government for each select option }}
      <div id="elvis-db-query-actor-select">
        <select class="custom-select" multiple>
          <option value="1">company A</option>
          <option value="2">company B</option>
          <option value="3">company C</option>
        </select>
      </div>

    </div>
  </div>
  <hr>

  <div class="card">
    <div class="card-body">
      <h2>3. Year range</h2>
      <p>Procurement within selected year range will be visualised</p>

      {{! year range select component }}
      <div id="elvis-db-query-year-range">
        <div class="form-inline">
          <input type="text" class="form-control" id="yearRangeStart" placeholder="Start Year">
          <input type="text" class="form-control" id="yearRangeEnd" placeholder="End Year">
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="card">
    <div class="card-body">
      <h2>4. Market</h2>
      <p>Only procurement within these sectors will be visualised</p>

      {{! CPV selector component }}
      <div id="elvis-db-query-cpv-select">
        <div class="form-group">
          <select size="10" class="custom-select" multiple>
            <option selected disabled>Select CPVs</option>
            <option value="1">CPV 1</option>
            <option value="1">-- CPV 1.1</option>
            <option value="1">-- CPV 1.2</option>
            <option value="1">-- CPV 1.3</option>
            <option value="2">CPV 2</option>
            <option value="1">-- CPV 2.1</option>
            <option value="3">CPV 3</option>
          </select>
        </div>
      </div>

    </div>
  </div>

  <hr>

  <div class="card">
    <div class="card-body">
      <h2>5. Settings</h2>
      <div class="row">
        <div class="col-md-6">
          <h5>Dot size represents</h5>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
            <label class="form-check-label" for="exampleRadios1">
              Number of contracts
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
            <label class="form-check-label" for="exampleRadios2">
              Money sum of all contracts
            </label>
          </div>
        </div>
        <div class="col-md-6">
          <h5>Connecting line represents</h5>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3" checked>
            <label class="form-check-label" for="exampleRadios3">
              Number of contracts
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios4" value="option3">
            <label class="form-check-label" for="exampleRadios4">
              Money flow between actors
            </label>
          </div>
        </div>
      </div>
    </div>
  </div>

  <br><br>

  <button class="btn btn-lg btn-primary">Generate the network</button>

  <br><br><br><br>

</div>